<%= form_for [@topic, @comment], :html => { :class => "form-horizontal" } do |f| %>
  <div class="control-group">
    <%= f.label :content, "Comment", :class => "control-label" %>
    <div class="controls">
      <%= f.text_area :content, :rows => 3, :cols => 40 %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "Submit Comment", :class => "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>
